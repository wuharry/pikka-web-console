{
  "name": "pikka-web-console",
  "private": false,
  "version": "5.1.0",
  "description": "一個輕量級的網頁內嵌式控制台監控工具，讓開發者可以即時檢視 JavaScript console 輸出",
  "bin": {
    "pikka-web-console": "./bin/cli.js",
    "pikka-console": "./bin/cli.js",
    "console-monitor": "./bin/cli.js"
  },
  "type": "module",
  "main": "dist/inpage-console.umd.js",
  "module": "dist/inpage-console.es.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/inpage-console.es.js",
      "require": "./dist/inpage-console.umd.js"
    },
    "./server": {
      "types": "./dist/server/index.d.ts",
      "import": "./dist/server/index.js",
      "require": "./dist/server/index.cjs"
    },
    "./dist/inpage-console.css": "./dist/inpage-console.css"
  },
  "files": [
    "dist",
    "bin",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "console",
    "debug",
    "web",
    "development",
    "logging",
    "monitor",
    "javascript",
    "typescript",
    "frontend"
  ],
  "author": "吳浩維 wu harry <whw880218we@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wuharry/pikka-web-console.git"
  },
  "homepage": "https://github.com/wuharry/pikka-web-console#readme",
  "bugs": {
    "url": "https://github.com/wuharry/pikka-web-console/issues"
  },
  "scripts": {
    "dev": "concurrently \"npm run dev:lib\" \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:lib": "vite build --mode lib --watch",
    "dev:frontend": "vite --port 3749",
    "dev:backend": "nodemon --exec tsx src/server/api/main.ts",
    "build": "npm run build:clean && npm run build:lib && npm run build:ui && npm run build:server",
    "build:clean": "rimraf dist dist-dev",
    "build:lib": "tsc --project tsconfig.build.json && vite build --mode lib",
    "build:ui": "vite build --mode ui",
    "build:server": "tsc --project tsconfig.server.json && vite build --mode server",
    "preview:ui": "vite preview --outDir dist/ui --port 7771",
    "prepare": "npm run build",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@tailwindcss/vite": "^4.1.12",
    "@types/node": "^24.3.0",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "@vitejs/plugin-react": "^5.0.2",
    "concurrently": "^9.2.0",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-config-xo": "^0.48.0",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.3.0",
    "jiti": "^2.5.1",
    "nodemon": "^3.1.10",
    "prettier": "3.6.2",
    "rimraf": "^6.0.1",
    "tailwindcss": "^4.1.12",
    "tsx": "^4.20.4",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.40.0",
    "vite": "^7.1.2"
  },
  "peerDependencies": {
    "tailwindcss": "^4.1.12",
    "typescript": "~5.8.3"
  },
  "packageManager": "pnpm@9.0.0+sha512.b4106707c7225b1748b61595953ccbebff97b54ad05d002aa3635f633b9c53cd666f7ce9b8bc44704f1fa048b9a49b55371ab2d9e9d667d1efe2ef1514bcd513",
  "dependencies": {
    "@hono/node-server": "^1.18.2",
    "@hono/node-ws": "^1.2.0",
    "hono": "^4.9.2"
  }
}
